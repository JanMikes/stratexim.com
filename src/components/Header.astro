---
const navItems = [
  { id: 'about', en: 'About', cz: 'O nás' },
  { id: 'products', en: 'Products', cz: 'Produkty' },
  { id: 'team', en: 'Team', cz: 'Tým' },
  { id: 'contact', en: 'Contact', cz: 'Kontakt' },
];
---

<header
  id="header"
  class="fixed top-0 left-0 right-0 z-50 transition-all duration-500 bg-transparent"
  role="banner"
>
  <div class="header-border absolute bottom-0 left-0 w-full h-px section-divider transition-opacity duration-500 opacity-0"></div>

  <div class="container mx-auto px-6 py-5 flex items-center justify-between">
    <a
      href="#hero"
      class="text-base font-medium tracking-[0.35em] hero-gradient-text hover:opacity-80 transition-opacity"
      aria-label="Stratexim - Back to top"
    >
      STRATEXIM
    </a>

    <nav class="hidden md:flex items-center gap-10" role="navigation" aria-label="Main navigation">
      {navItems.map((item) => (
        <a
          href={`#${item.id}`}
          class="text-sm text-white/50 hover:text-white transition-colors duration-300 tracking-wider animated-underline"
        >
          <span class="lang-en">{item.en}</span>
          <span class="lang-cz">{item.cz}</span>
        </a>
      ))}
    </nav>

    <div class="flex items-center gap-3 text-sm" role="group" aria-label="Language selection">
      <button
        data-lang-btn="en"
        class="transition-all duration-300 px-3 py-1.5 rounded-md text-white/40 hover:text-white/70"
        aria-label="Switch to English"
        lang="en"
      >
        EN
      </button>
      <span class="text-white/20" aria-hidden="true">/</span>
      <button
        data-lang-btn="cz"
        class="transition-all duration-300 px-3 py-1.5 rounded-md text-white/40 hover:text-white/70"
        aria-label="Přepnout na češtinu"
        lang="cs"
      >
        CZ
      </button>
    </div>
  </div>
</header>
