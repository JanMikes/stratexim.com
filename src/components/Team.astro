---
const t = {
  title: { en: 'Our Founders', cz: 'Naši zakladatelé' },
  experience: { en: '7+ years in textile manufacturing', cz: '7+ let v textilní výrobě' },
  tomasBio: { en: 'Expert in tactical textile production with extensive experience in military-grade manufacturing processes.', cz: 'Expert na výrobu taktických textilií s rozsáhlými zkušenostmi ve vojenských výrobních procesech.' },
  myronBio: { en: 'Specialist in protective fabric technologies and quality assurance for defense applications.', cz: 'Specialista na technologie ochranných tkanin a zajištění kvality pro obranné aplikace.' },
};

const team = [
  { name: 'Tomáš Boniatti', bio: t.tomasBio, initials: 'TB', color: 'navy' },
  { name: 'Myron Mahurskyj', bio: t.myronBio, initials: 'MM', color: 'blue' },
];

const colorClasses = {
  navy: {
    gradient: 'from-blue-800/30 via-blue-800/10 to-transparent',
    border: 'group-hover:border-blue-700/40',
    glow: 'bg-blue-800/20',
    text: 'group-hover:text-blue-300',
  },
  blue: {
    gradient: 'from-blue-500/30 via-blue-500/10 to-transparent',
    border: 'group-hover:border-blue-500/40',
    glow: 'bg-blue-500/20',
    text: 'group-hover:text-sky-300',
  },
};
---

<section id="team" class="py-32 px-6 relative overflow-hidden bg-gradient-to-b from-blue-950/30 via-black to-blue-950/30">
  <!-- Background gradient orbs -->
  <div class="section-orb section-orb-indigo w-[350px] h-[350px]" style="top: 20%; left: -10%;"></div>
  <div class="section-orb section-orb-blue w-[300px] h-[300px]" style="bottom: 15%; right: -8%;"></div>

  <!-- Section divider -->
  <div class="absolute top-0 left-0 w-full h-px section-divider"></div>

  <div class="container mx-auto max-w-4xl relative z-10">
    <div class="scroll-reveal">
      <div class="text-center mb-6">
        <p class="text-xs tracking-[0.4em] text-white/40 uppercase mb-4">
          Leadership
        </p>
        <h2 class="text-3xl md:text-5xl font-light tracking-tight hero-gradient-text">
          <span class="lang-en">{t.title.en}</span>
          <span class="lang-cz">{t.title.cz}</span>
        </h2>
      </div>

      <p class="text-white/40 text-center mb-16 text-sm tracking-wider flex items-center justify-center gap-3">
        <span class="w-12 h-px gradient-line"></span>
        <span class="lang-en">{t.experience.en}</span>
        <span class="lang-cz">{t.experience.cz}</span>
        <span class="w-12 h-px gradient-line"></span>
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-12 lg:gap-16 scroll-reveal-stagger">
      {team.map((member) => {
        const colors = colorClasses[member.color as keyof typeof colorClasses];
        return (
          <div class="group text-center">
            <!-- Avatar with enhanced glow effect -->
            <div class="relative w-36 h-36 mx-auto mb-8">
              <!-- Outer glow ring -->
              <div class={`absolute inset-0 rounded-full ${colors.glow} blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-700 scale-125`}></div>

              <!-- Gradient ring animation -->
              <div class={`absolute inset-0 rounded-full bg-gradient-to-b ${colors.gradient} opacity-0 group-hover:opacity-100 transition-opacity duration-500`}></div>

              <!-- Main avatar -->
              <div class={`relative w-full h-full rounded-full bg-gradient-to-b from-white/[0.08] to-white/[0.02] border border-white/[0.1] ${colors.border} flex items-center justify-center transition-all duration-500 group-hover:scale-105`}>
                <span class={`text-3xl font-light text-white/50 tracking-widest ${colors.text} transition-colors duration-500`}>
                  {member.initials}
                </span>
              </div>
            </div>

            <h3 class="text-2xl font-semibold mb-4 tracking-wide group-hover:text-white transition-colors duration-300">
              {member.name}
            </h3>
            <p class="text-white/50 leading-relaxed text-sm max-w-xs mx-auto group-hover:text-white/70 transition-colors duration-500">
              <span class="lang-en">{member.bio.en}</span>
              <span class="lang-cz">{member.bio.cz}</span>
            </p>
          </div>
        );
      })}
    </div>
  </div>
</section>
