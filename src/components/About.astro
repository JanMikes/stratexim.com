---
const t = {
  title: { en: 'About Us', cz: 'O nás' },
  description: { en: 'Stratexim is a leading manufacturer of high-performance tactical textiles for military and police forces. With over 7 years of combined expertise in the textile industry, we deliver precision, durability, and protection.', cz: 'Stratexim je předním výrobcem vysoce výkonných taktických textilií pro armádu a policejní složky. S více než 7 lety kombinovaných zkušeností v textilním průmyslu dodáváme přesnost, odolnost a ochranu.' },
  precision: { en: 'Precision', cz: 'Přesnost' },
  precisionDesc: { en: 'Every stitch, every seam engineered to exact specifications.', cz: 'Každý steh, každý šev navržen podle přesných specifikací.' },
  durability: { en: 'Durability', cz: 'Odolnost' },
  durabilityDesc: { en: 'Materials tested under extreme conditions to ensure lasting performance.', cz: 'Materiály testované v extrémních podmínkách pro zajištění dlouhodobé výkonnosti.' },
  innovation: { en: 'Innovation', cz: 'Inovace' },
  innovationDesc: { en: 'Cutting-edge textile technologies for superior protection.', cz: 'Nejmodernější textilní technologie pro maximální ochranu.' },
};

const pillars = [
  { title: t.precision, desc: t.precisionDesc, icon: 'target' },
  { title: t.durability, desc: t.durabilityDesc, icon: 'shield' },
  { title: t.innovation, desc: t.innovationDesc, icon: 'layers' },
];
---

<section id="about" class="py-32 px-6 relative overflow-hidden bg-gradient-to-b from-blue-950/30 via-black to-blue-950/30">
  <!-- Background gradient orbs -->
  <div class="section-orb section-orb-indigo w-[400px] h-[400px]" style="top: 10%; left: -10%;"></div>
  <div class="section-orb section-orb-blue w-[300px] h-[300px]" style="bottom: 20%; right: -5%;"></div>

  <!-- Section divider -->
  <div class="absolute top-0 left-0 w-full h-px section-divider"></div>

  <div class="container mx-auto max-w-6xl relative z-10">
    <div class="text-center mb-20 scroll-reveal">
      <p class="text-xs tracking-[0.4em] text-white/40 uppercase mb-4">
        Who We Are
      </p>
      <h2 class="text-3xl md:text-5xl font-light mb-8 tracking-tight hero-gradient-text">
        <span class="lang-en">{t.title.en}</span>
        <span class="lang-cz">{t.title.cz}</span>
      </h2>
      <p class="text-white/50 max-w-3xl mx-auto leading-relaxed text-lg">
        <span class="lang-en">{t.description.en}</span>
        <span class="lang-cz">{t.description.cz}</span>
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8 lg:gap-12 scroll-reveal-stagger">
      {pillars.map((pillar) => (
        <div class="group relative p-8 rounded-2xl card-gradient-border">
          <div class="relative">
            <div class="icon-glow w-16 h-16 mb-8 rounded-xl flex items-center justify-center">
              {pillar.icon === 'target' && (
                <svg class="w-7 h-7 text-white/70 group-hover:text-sky-400 transition-colors duration-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"></circle>
                  <circle cx="12" cy="12" r="6"></circle>
                  <circle cx="12" cy="12" r="2"></circle>
                </svg>
              )}
              {pillar.icon === 'shield' && (
                <svg class="w-7 h-7 text-white/70 group-hover:text-sky-400 transition-colors duration-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
                </svg>
              )}
              {pillar.icon === 'layers' && (
                <svg class="w-7 h-7 text-white/70 group-hover:text-sky-400 transition-colors duration-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polygon points="12 2 2 7 12 12 22 7 12 2"></polygon>
                  <polyline points="2 17 12 22 22 17"></polyline>
                  <polyline points="2 12 12 17 22 12"></polyline>
                </svg>
              )}
            </div>
            <h3 class="text-xl font-semibold mb-4 tracking-wide">
              <span class="lang-en">{pillar.title.en}</span>
              <span class="lang-cz">{pillar.title.cz}</span>
            </h3>
            <p class="text-white/50 leading-relaxed group-hover:text-white/70 transition-colors duration-400">
              <span class="lang-en">{pillar.desc.en}</span>
              <span class="lang-cz">{pillar.desc.cz}</span>
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
